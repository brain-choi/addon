{
  "name": "Wallpad Controller with RS485",
  "version": "0.8.7",
  "slug": "wallpad",
  "description": "코맥스/삼성/대림/베스틴 월패드가 가능한 nodejs 서버 애드온입니다.",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "map": [
    "share:rw"
  ],
  "url": "https://github.com/HAKorea/addons",
  "startup": "application",
  "boot": "auto",
  "uart": true,
  "options": {
    "model":"bestin",
    "sendDelay": 150,
    "energy_config":{
      "type": "socket",
      "serial_port": "/dev/ttyUSB0",
      "baudrate": 9600,
      "parity" : "none",
      "socket_ip": "192.168.0.12",
      "socket_port": 8899
    },
    "control_config": {
      "type": "socket",
      "serial_port": "/dev/ttyUSB0",
      "baudrate": 9600,
      "parity": "none",
      "socket_ip": "192.168.0.18",
      "socket_port": 8899
    },
    "mqtt": {
      "broker": "192.168.0.28",
      "username": "harwin",
      "password": "mosquitto",
      "receiveDelay": 10000
    }
  },
  "schema": {
    "model":"list(commax|samsung|daelim|hyundai|bestin)",
    "sendDelay": "int",
    "energy_config":{
      "type": "list(serial|socket)",
      "serial_port": "str?",
      "baudrate": "int?",
      "parity" : "list(none|even|odd)?",
      "socket_ip": "str?",
      "socket_port": "int?"
    },  
    "control_config":{
      "type": "list(serial|socket)",
      "serial_port": "str?",
      "baudrate": "int?",
      "parity" : "list(none|even|odd)?",
      "socket_ip": "str?",
      "socket_port": "int?"
    },        
    "mqtt": {
      "server": "str",
      "username": "str",
      "password": "str",
      "receiveDelay": "int"
    },
    "customfile": "str?"
  }
}
